package net.lsrp.kingdom.entity;

import java.io.Serializable;
import java.util.Random;

import net.lsrp.kingdom.entity.projectile.SlowProjectile;
import net.lsrp.kingdom.graphics.Screen;
import net.lsrp.kingdom.level.Level;

public abstract class Entity implements Serializable {

	private static final long serialVersionUID = 1L;

	public static Entity[] dictionary = new Entity[20];
	//dictionary[0] = 
	
	public static Class<?> tr(int i) {
		if(i == 2) {
			return SlowProjectile.class;
		}
		return null;
	}
	
	SlowProjectile sp = tr(2).getClass()(2,2,3.0);
	
	public int x, y;
	private boolean removed = false;
	protected Level level;
	protected final Random random = new Random();
	
	public void update() {
	}
	
	public void render(Screen screen) {
	}
	
	public void remove() {
		//Remove from level
		removed = true;
	}
	
	public boolean isRemoved() {
		return removed;
	}
	
	public void init(Level level) {
		this.level = level;
	}
}
