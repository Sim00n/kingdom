package net.lsrp.kingdom.graphics;


public class Sprite {

	public final int SIZE;
	private int x, y;
	public int[] pixels;
	private SpriteSheet sheet;
	
	static {
		Sprite grass = new Sprite(16, 0, 5, SpriteSheet.tiles);
		Sprite flower = new Sprite(16, 1, 0, SpriteSheet.tiles);
		Sprite rock = new Sprite(16, 2, 0, SpriteSheet.tiles);
		Sprite voidSprite = new Sprite(16, 0x1B87E0);
		
		//Spawn Level Sprites
		Sprite spawn_grass = new Sprite(16, 0, 0, SpriteSheet.spawnLevel);
		Sprite spawn_hedge = new Sprite(16, 1, 0, SpriteSheet.spawnLevel);
		Sprite spawn_water = new Sprite(16, 2, 0, SpriteSheet.spawnLevel);
		Sprite spawn_wall1 = new Sprite(16, 0, 1, SpriteSheet.spawnLevel);
		Sprite spawn_wall2 = new Sprite(16, 0, 2, SpriteSheet.spawnLevel);
		Sprite spawn_floor = new Sprite(16, 1, 1, SpriteSheet.spawnLevel);
		
		//Player Sprites
		Sprite playerf = new Sprite(32, 0, 5, SpriteSheet.tiles);
		Sprite playerb = new Sprite(32, 2, 5, SpriteSheet.tiles);
		Sprite players = new Sprite(32, 1, 5, SpriteSheet.tiles);
		
		Sprite playerf1 = new Sprite(32, 0, 6, SpriteSheet.tiles);
		Sprite playerf2 = new Sprite(32, 0, 7, SpriteSheet.tiles);
		
		Sprite playerb1 = new Sprite(32, 2, 6, SpriteSheet.tiles);
		Sprite playerb2 = new Sprite(32, 2, 7, SpriteSheet.tiles);
		
		Sprite players1 = new Sprite(32, 1, 6, SpriteSheet.tiles);
		Sprite players2 = new Sprite(32, 1, 7, SpriteSheet.tiles);
		
		
		//Enemy Sprites
		Sprite enemyf = new Sprite(32, 3, 5, SpriteSheet.tiles);
		Sprite enemyb = new Sprite(32, 5, 5, SpriteSheet.tiles);
		Sprite enemys = new Sprite(32, 4, 5, SpriteSheet.tiles);
		
		Sprite enemyf1 = new Sprite(32, 3, 6, SpriteSheet.tiles);
		Sprite enemyf2 = new Sprite(32, 3, 7, SpriteSheet.tiles);
		
		Sprite enemyb1 = new Sprite(32, 5, 6, SpriteSheet.tiles);
		Sprite enemyb2 = new Sprite(32, 5, 7, SpriteSheet.tiles);
		
		Sprite enemys1 = new Sprite(32, 4, 6, SpriteSheet.tiles);
		Sprite enemys2 = new Sprite(32, 4, 7, SpriteSheet.tiles);
		
		//Projectiles
		Sprite slow_projectile = new Sprite(16, 0, 0, SpriteSheet.projectile_magic);
	}

	public Sprite(int size, int x, int y, SpriteSheet sheet) {
		this.SIZE = size;
		pixels = new int[SIZE * SIZE];
		this.x = x * size;
		this.y = y * size;
		this.sheet = sheet;
		load();
	}
	
	public Sprite(int size, int color) {
		this.SIZE = size;
		pixels = new int[SIZE * SIZE];
		setColor(color);
	}
	
	private void setColor(int color) {
		for(int y = 0; y < SIZE; y++) {
			for(int x = 0; x < SIZE; x++) {
				pixels[x + y * SIZE] = color;
			}
		}
	}
	
	private void load() {
		for(int y = 0; y < SIZE; y++) {
			for(int x = 0; x < SIZE; x++) {
				pixels[x + y * SIZE] = sheet.pixels[(x + this.x) + (y + this.y) * sheet.SIZE];
			}
		}
	}
}
